<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_back"
    android:orientation="vertical"
    android:gravity="center">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        style="@style/Widget.Neumorph.CardView"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_lightSource="rightTop"
        app:neumorph_strokeColor="#E9F5FD"
        app:neumorph_strokeWidth="1dp"
        app:neumorph_shapeAppearance="@style/CustomShapApperience"
        app:neumorph_shadowColorDark="#BFE0F8"
        app:neumorph_shadowColorLight="#E9F5FD"
        android:transitionName="logo"
        app:neumorph_shapeType="basin">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/dish"
            android:layout_gravity="center"/>

    </soup.neumorphism.NeumorphCardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:textColor="@color/text_color"
        android:fontFamily="cursive"
        android:transitionName="name"/>

</LinearLayout>